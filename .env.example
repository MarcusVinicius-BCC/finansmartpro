# FinanSmart Pro - Configuração de Ambiente (EXEMPLO)
# Copie este arquivo para .env e preencha com suas credenciais

# Banco de Dados
DB_HOST=localhost
DB_NAME=finansmart
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Aplicação
APP_NAME=FinanSmart Pro
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/finansmartpro

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=seu-email@exemplo.com
SMTP_PASSWORD=sua-senha-aqui
MAIL_FROM_ADDRESS=seu-email@exemplo.com
MAIL_FROM_NAME=FinanSmart Pro

# Segurança
SESSION_LIFETIME=1800
CSRF_TOKEN_LIFETIME=3600
